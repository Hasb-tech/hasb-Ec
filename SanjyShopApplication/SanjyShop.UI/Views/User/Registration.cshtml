            $(":input[type='text'],:input[type='password'],textarea").focus(function (e) {
                if ($(this).val().length != 0) {
                    $(this).removeAttr("placeholder");

                }
                $(this).siblings('span.Validators').addClass('smallValidators');
                $(this).siblings('span.Validators').removeClass('Validators');
            }).blur(function () {

                if ($(this).val().length == 0) {
                    $(this).siblings('span.smallValidators').addClass('Validators');
                }
                $(this).siblings('span.Validators').removeClass('smallValidators');


            });





